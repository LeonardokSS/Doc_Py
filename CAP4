x = 1    #Int, ou inteiro, é um número inteiro, positivo ou negativo, sem decimais, de comprimento ilimitado.

y = 2.8  # Float, ou “número de ponto flutuante”, é um número, positivo ou negativo, que contém uma ou mais casas decimais.

z = 1j   #Os números complexos são escritos com um "j" como a parte imaginária
 
#Para verificar o tipo de qualquer objeto em Python, use a função type():
print(type(x))
print(type(y))
print(type(z))

#Conversao
x = 1    # int
y = 2.8  # float
z = 1j   # complex

#convert from int to float:
a = float(x)

#convert from float to int:
b = int(y)

#convert from int to complex:
c = complex(x)

print(a)
print(b)
print(c)

print(type(a))
print(type(b))
print(type(c))
